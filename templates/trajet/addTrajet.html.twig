{% extends 'base.html.twig' %}

{% block body %}
<form>
    <div class="form-group">
        <label for="nbPlaces">Nombre de places</label>
        <input type="number" class="form-control" id="nbPlaces" placeholder="Enter number">
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" placeholder="Choose date">
    </div>
    <div class="form-group">
        <label for="heure">Heure</label>
        <input type="time" class="form-control" id="heure" placeholder="Choose a time">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
{% endblock %}
